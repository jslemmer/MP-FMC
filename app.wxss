.header{
  height: 125px;
  width:100%;
  position: relative;
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/shanghai');
  background-size: cover !important;
  background-position: center;
  color: white;  
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
}

.title {
  font-size: 24px;
  text-align: center;
}

.slogan {
  font-size: 14px;
  opacity: 0.7;
  font-weight: lighter;
  text-align: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.left {
  float: left;
  width: 70%;
  padding-top: 40px;
}

.right {
  float: left;
  width: 30%;
  padding-top: 20px;
}