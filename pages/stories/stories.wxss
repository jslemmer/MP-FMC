/* pages/stories/stories.wxss */
.header{
  height: 125px;
  width:100%;
  position: relative;
  margin-bottom: 30px;
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/shanghai');
  background-size: cover !important;
  background-position: center;
  color: white;  
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
}

.title {
  padding-top: 40px;
  font-size: 24px;
  text-align: center;
}
.slogan {
  font-size: 14px;
  opacity: 0.7;
  font-weight: lighter;
  text-align: center;
}

.stories {
  margin: auto;
  width: 80%;
  height: 175px;
  color: black;
  position: relative;
  border: black 1px solid;
  margin-bottom: 20px;
}

.stories-header-text {
  padding-left: 15px;
}

.stories-text {
  border-top: black 2px solid;
  padding-left: 15px;  
}